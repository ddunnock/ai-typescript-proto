{
  "name": "@repo/shared",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": { "types": "./dist/index.d.ts", "import": "./dist/index.js" },
    "./types": { "types": "./dist/types.d.ts", "import": "./dist/types.js" },
    "./config": { "types": "./dist/config.d.ts", "import": "./dist/config.js" },
    "./utils": { "types": "./dist/utils.d.ts", "import": "./dist/utils.js" },
    "./errors": { "types": "./dist/errors.d.ts", "import": "./dist/errors.js" }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^2.0.0"
  }
}